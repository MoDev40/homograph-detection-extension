{
  "manifest_version": 3,
  "name": "Homograph attack detection",
  "version": "1.0",
  "description": "Real-time Homograph attack detection",
  "permissions": ["tabs", "activeTab", "webNavigation", "scripting", "notifications"],
  "host_permissions": ["https://fastapi-homograph-detector.onrender.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["block.html", "block.css", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' https://fastapi-homograph-detector.onrender.com;"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "32": "icons/icon48.png"
    }
  }
}
